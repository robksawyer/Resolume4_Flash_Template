package{	import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.*;	import flash.xml.*;	import flash.net.*;	import flash.text.*;		import resolumeCom.*;	import resolumeCom.parameters.*;	import resolumeCom.events.*;	public class rss extends MovieClip	{		private var loader:URLLoader = new URLLoader;		private var xml:XML;		private var xmllist:XMLList;		private var currentRSS:int;		private var rssTitle:RssTitle;				private var resolume:Resolume = new Resolume();		private var rssurl:StringParameter = resolume.addStringParameter("RSS URL", "http://feeds.theonion.com/theonion/daily");		//Resolume Twitter feed url: http://twitter.com/statuses/user_timeline/6014912.rss		public function rss():void		{			loader.addEventListener(Event.COMPLETE, onLoaded);			loader.addEventListener(IOErrorEvent.IO_ERROR, onLerror);						resolume.addParameterListener(parameterChanged);						loadRss();		}				public function loadRss()		{			loader.load(new URLRequest(rssurl.getValue()));		}		private function onLerror(e:IOErrorEvent):void		{			trace ("Error loading:" + "'" + e.text + "'");						var txt:TextField = new TextField();			txt.x = 20;			txt.y = 20;			txt.width = 600;			txt.height = 600;			txt.text = "Error loading:" + "'" + e.text + " 'RSS URL: '" + rssurl.getValue() + "'";			txt.multiline = true;			txt.wordWrap = true;						var txtFormat:TextFormat = new TextFormat();			txtFormat.color = 0xFF0000;			txtFormat.size = 20;			txtFormat.font = "Verdana";						txt.setTextFormat(txtFormat);			addChild(txt);					}				private function onLoaded(e:Event):void		{			//trace(e.target.data);			xml = new XML(e.target.data);			xmllist = xml.channel.item;						if (!rssTitle)			{				rssTitle = new RssTitle();				rssTitle.x = 70;				rssTitle.y = 182;				rssTitle.UpdateRssData(xmllist);								addChild(rssTitle);			}			else			{				rssTitle.UpdateRssData(xmllist);			}		}				public function parameterChanged(e:ChangeEvent):void		{			if (e.object == rssurl)			{				loadRss();			}					}	}}